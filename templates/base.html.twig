<!doctype html>
<html lang="fr">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
			{% block title %}Mamie - {% endblock %}
		</title>
		{% block stylesheets %}
			<link href="https://bootswatch.com/5/lumen/bootstrap.min.css" rel="stylesheet">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
		{% endblock %}
	</head>
	<body>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container-fluid">
			    <a class="navbar-brand" href="{{path('app_home')}}"><i class="bi bi-cup-hot-fill align-middle"></i> Mamie <i class="align-middle bi bi-cup-hot-fill"></i></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
              <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav me-auto">
                  <li class="nav-item">
                    <a class="nav-link active" href="{{path('app_home')}}">Accueil
                        <span class="visually-hidden">(current)</span>
                    </a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_ajoutCafe')}}">Ajouter un café</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_liste_typecafe')}}">Liste des types de cafés</a>
                  </li>
                  <li class="nav-item">
                    <a class="nav-link" href="{{path('app_liste_cafe')}}">Liste des cafés</a>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
    <div class="container-fluid">
      {% for message in app.flashes('notice') %}
        <h2 class="alert alert-success text-center mt-4 mb-4" role="alert">
          {{ message }}
        </h2>
      {% endfor %}
		{% block body %}Mamie
		{% endblock %}
    </div>
		{% block javascripts %}
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
		{% endblock %}
	</body>
</html>
