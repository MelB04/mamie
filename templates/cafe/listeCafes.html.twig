{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Liste des cafés
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold shadow-lg p-3 mb-5 bg-body rounded"><i class="bi bi-cup-hot-fill display-5"></i> Liste des cafés <i class="bi bi-cup-hot-fill display-5"></i></h1>

		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">

				<a type="button" class="mt-5 mb-5 btn btn-primary" href="{{path('app_ajoutCafe')}}">Ajouter un café</a>

				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Nom</th>
								<th scope="col">Prix</th>
								<th scope="col">Pays</th>
								<th scope="col">Description</th>
							</tr>
						</thead>
						<tbody>
							{% for cafe in cafes |sort((a, b) => a.nom <=> b.nom) %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ cafe.nom | capitalize }}</td>
									<td>{{ cafe.prix }}€</td>
									<td>{{ cafe.pays | upper }}</td>
									<td>{{ cafe.description | capitalize }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
