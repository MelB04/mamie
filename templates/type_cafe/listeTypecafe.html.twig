{% extends 'base.html.twig' %}

{% block title %}
	{{parent()}}Liste des types de cafés
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold shadow-lg p-3 mb-5 bg-body rounded"><i class="align-middle bi bi-cup-hot-fill display-5"></i> Liste des types de cafés <i class="align-middle bi bi-cup-hot-fill display-5"></i></h1>

		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">

				<a type="button" class="mt-5 mb-5 btn btn-primary" href="#">Ajouter un type de café</a>

				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Désignation</th>
								<th scope="col">Origine</th>
							</tr>
						</thead>
						<tbody>
							{% for typeCafe in typesCafe |sort((a, b) => a.designation <=> b.designation) %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ typeCafe.designation | capitalize }}</td>
									<td>{{ typeCafe.origine | upper }}</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
